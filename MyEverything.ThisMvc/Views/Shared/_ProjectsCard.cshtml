@model (ProjectInfo,bool)
<div class="card shadow-sm h-100 border-1">


    @* Resim alanı *@
    <div class="h-100 ratio ratio-1x1">

        <img src="@Model.Item1.Image" class="card-img-top img-fluid h-100 ratio-16x9" alt="@Model.Item1.Title">
    </div>
    <div class="card-body d-flex flex-column p-3 ">
        @* Başlık *@
        <h5 class="card-title">@Model.Item1.Title</h5>

        @* Açıklama *@

        <p class="card-text">@Model.Item1.MinExplanation</p>

        @* Butonlar veya ek linkler için yer (isteğe bağlı) *@
        <div class="mt-auto d-flex">
            <a href="@Url.Action(action: "DetailOfSelected", controller: "Projects", values: new { id = Model.Item1.Id, title = Model.Item1.Title })" class="btn btn-primary">Detayları Gör</a>
            @if (Model.Item2)
            {
                <a href="@Url.Action(action: "ProjectDelete", controller: "Projects",values: new { id = Model.Item1.Id })" class="btn btn-danger ms-auto">Projeyi Sil</a>
            }
        </div>
    </div>

    <div class="card-footer">
        @* Oluşturulma tarihi *@
        <small class="text-muted">Oluşturulma Tarihi: @Model.Item1.CreatedDate.ToString("dd MMMM yyyy")</small>

        @* ID (genellikle gizli tutulur ama istenirse gösterilebilir) 
        <small class="text-muted float-end">ID: @Model.Id</small>
        *@
    </div>


</div>